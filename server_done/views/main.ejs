<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-latest.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/JNKKKK/MoreToggles.css@0.2.1/output/moretoggles.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Document</title>
    <!-- thư viện Chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    
    <link href= "/public/animation.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <span>
        <h5 id="chao_mung" class="text-white" style=" float: right ">Xin chào </h5>
        <!-- <h1 id="test" style="color: white;" >aa</h1> -->
    </span>
    <br>
    
    <div id="IOT_dashboard">
        <h1 class="text-center text-white m-4 "> IOT Dashboard</h1>

        <div class="container text-center ">
                <div class="row mb-1" style="height: 150px"  >
                    <div id="nhietdo" class="col-4 border border-dark rounded p-0">
                        <h2>Nhiệt Độ</h2>
                        <h4 class="mt-5" id="temp_value"></h4>
                        <!-- <h4><%- n %></h4> -->
                        
                    </div>

                    <div id="doAm" class="col-4 border border-dark rounded p-0">
                        <h2>Độ ẩm</h2>
                        <h4 class="mt-5" id="humi_value"></h4>
                        <!-- <h4><%- n %></h4> -->
                        
                    </div>

                    <div id="anhSang" class="col-4 border border-dark rounded p-0">
                        <h2>Ánh sáng</h2>
                        <h4 class="mt-5" id="light_value"></h4>
                        <!-- <h4><%- n %></h4> -->

                    </div>
                </div>
            
                <div class="row" >

                    <div class="col-8 p-0 border border-dark rounded" style="max-height: 400px"   >
                        <button id="nut_nhan_chart" onclick="showChart()"> Click để xem đồ thị </button>
                        <canvas  class="border rounded" id="myChart" style="min-height: 320px ;max-height: 400px; opacity:0 ;background-color: antiquewhite;"></canvas>
                    </div>

                    <div class="col-4 p-0 d-flex flex-column" >
                        <div id="den" class="flex-fill border border-dark rounded "  >
                            <h2 class="mb-4">Đèn</h2>
                            <div style="display: flex;">
                                <div class="checkboxThree">
                                    <input type="checkbox" value="1" onclick = "kiemtra_on_off_den()" id="checkboxThreeInput_den" name=""  />
                                    <label for="checkboxThreeInput_den"></label>
                                </div>
                                    <img id="light_img" src="/public/images/off_light.png" style="width : 30%;">
                            </div>

                        </div>
            
                        <div id="dieuhoa" class="flex-fill border border-dark rounded mt-0" >
                            <h2 class="mb-4">Tivi</h2>
                            <div style="display: flex;">
                                <div class="checkboxThree">
                                    <input type="checkbox" value="2" onclick="kiemtra_on_off_tv()" id="checkboxThreeInput_tv" name=""  />
                                    <label for="checkboxThreeInput_tv"></label>
                                </div>
                                <img id="tv_img" src="/public/images/off_tv.png" style="width : 30%;" >
                            </div>

                        </div>
                    </div>
                </div>
        </div>
        <h1 id="a"></h1>
    </div>
    <script src="/public/doi_mau.js"></script>
    <script src="/public/animation.js"></script>
    

